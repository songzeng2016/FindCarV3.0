page{
    background: #f1f1f1;
    font-size: 11pt;
    font-family: "Microsoft YaHei";
    color: #3d3d3d;
}
.form{
    background: white;
    padding-top:10px;
    padding-bottom: 10px;
}
.row{
    display: flex;
    height: 40px;
    background: white;
}
.row image{
    width: 18px;
    height: 18px;
    margin-top:auto;
    margin-bottom: auto;
    margin-left: 10px;
}
.row input{
    margin-top:auto;
    margin-bottom: auto;
    border-bottom: 1px solid gainsboro;
    width: 100%;
    margin-left: 10px;
    margin-right: 10px;
}
button{
    margin:5px;
    margin-top:20px;
    background: #22CC77;
    color: white;
    font-size: 11pt;
    margin-left: 100px;
    margin-right: 100px;
}