<view class="form">
    <!--第一行  公司名称-->
    <view class="row">
        <!--<image src="../icon/person.png"></image>-->
        <input placeholder="公司名称" type="text" value="{{person.name}}" placeholder-style="font-size:11pt;" bindinput="getPersonNameTap"/>
    </view>
    <!--第二行  联系人-->
    <view class="row">
        <!--<image src="../icon/phone.png"></image>-->
        <input placeholder="联系人" type="number"  value="{{person.phonenum}}" placeholder-style="font-size:11pt;" bindinput="getPersonPhonenumTap"/>
    </view>
       <!--第3行  联系电话-->
        <view class="row">
        <!--<image src="../icon/phone.png"></image>-->
        <input placeholder="联系电话" type="number"  value="{{person.phonenum}}" placeholder-style="font-size:11pt;" bindinput="getPersonPhonenumTap"/>
    </view>
</view>
<!--确认按钮-->
<button bindtap="goBackTap">提交审核</button>