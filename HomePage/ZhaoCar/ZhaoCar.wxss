.content {
  border: 1px solid #d0d0d0;
  border-radius: 8px;
  height: 115px;
  margin: 10px;
  background: #fff;
  padding: 10px;
}

.list-wrapper {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.list {
  width: 100%;
  padding: 20rpx 20rpx 0 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  background: #e8fcfa;
  border: 1px solid #d0d0d0;
  border-radius: 16rpx;
}

.car-list, .info-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.car-list {
  padding: 10rpx 0;
}

.car-list .icon-wrapper {
  width: 80rpx;
  margin-right: 10rpx;
}

.car-list .info {
  font-weight: 700;
}

.icon-wrapper .icon {
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}

.icon-wrapper .carIcon {
  width: 90%;
  height: 35rpx;
}

.remark-wrapper {
  padding-bottom: 10rpx;
  margin-top: 15rpx;
  border-bottom: 1px solid #d0d0d0;
  color: #666;
}

.info-wrapper .name, .info-wrapper .phone-wrapper {
  width: 50%;
  padding: 20rpx 0;
  text-align: center;
  font-weight: 700;
}

.info-wrapper .name {
  border-right: 1px solid #d0d0d0;
  color: #44a0dd;
}

.phone-wrapper .icon {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
