<!--HomePage/ownInfo/ownInfo.wxml-->
<form class="wrapper">
  <view class="avatar-wrapper">
    <image class="avatar" src="{{info.avatar || '/Images/HeadPortrait.jpg'}}" bindtap="selectImg"></image>
  </view>

  <view class="info-wrapper">
    <view class="info-list">
      <image class="icon" src="../icon/gongS.png"></image>
      <text class="desc">公司名称：</text>
      <input class="info" value="车咖" />
    </view>
    <view class="info-list">
      <image class="icon" src="../icon/PersonalCenter.png"></image>
      <text class="desc">联系人：</text>
      <input class="info" value="水手" />
    </view>
    <view class="info-list">
      <image class="icon" src="../icon/phone.png"></image>
      <text class="desc">联系电话：</text>
      <input class="info" value="15120814794" />
    </view>
    <view class="info-list">
      <image class="icon" src="../icon/beiPhone.png"></image>
      <text class="desc">备用电话：</text>
      <input class="info" placeholder-style="font-weight: normal;" value="" placeholder="请输入联系电话"/>
    </view>
  </view>

  <view class="remark">
    <text class="title">简介</text>
    <textarea class="memo" value="简介" />
  </view>

  <button class="submit">保存</button>
</form>