/* HomePage/ownInfo/ownInfo.wxss */

page {
  width: 100%;
  height: 100%;
}

.wrapper {
  display: block;
  width: 100%;
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  background: #f3f3f3;
}

.avatar-wrapper {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-wrapper .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.info-wrapper, .remark, .info-list .name {
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.info-wrapper, .remark {
  margin-bottom: 60rpx;
}

.info-wrapper {
  padding: 20rpx;
}

.info-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #ccc;
}

.info-list:first-child {
  padding-top: 0;
}

.info-list:last-child {
  padding-bottom: 0;
  border-bottom: none;
}

.info-list .icon {
  width: 50rpx;
  height: 50rpx;
}

.info-list .desc {
  margin: 0 10rpx;
}

.info-list .desc, .info-list .info {
  font-size: 30rpx;
  font-weight: 600;
}

.remark {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
}

.remark .title {
  margin-right: 20rpx;
  font-size: 30rpx;
  font-weight: 700;
}

.remark .memo {
  width: 80%;
  height: 80rpx;
  padding: 10rpx 15rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.submit {
  width: 160rpx;
  background: #2dcb71;
  color: white;
}
