/* HomePage/apply/apply.wxss */

page {
  width: 100%;
  height: 100%;
  background: #eee;
}

.list-wrapper {
  display: block;
  padding: 0 20rpx;
  background: #fff;
}

.list {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 5rpx;
  border-bottom: 1px solid #ddd;
}

.list .desc {
  margin-right: 30rpx;
  font-size: 28rpx;
}

.list .input {
  width: 73%;
  font-size: 26rpx;
}

.list .submit {
  padding: 0 20rpx;
  background: #65c87a;
  font-size: 24rpx;
  color: #fff;
}

.list .attribution {
  width: 450rpx;
  font-size: 28rpx;
}