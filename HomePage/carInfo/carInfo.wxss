/* HomePage/carInfo/carInfo.wxss */

page {
  width: 100%;
  height: 100%;
}

.wrapper {
  width: 100%;
  min-height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  background: #f3f3f3;
}

.carInfo-wrapper, .remark, .carInfo-list .name {
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.carInfo-wrapper, .remark {
  margin-bottom: 60rpx;
}

.carInfo-wrapper .title, .carInfo-wrapper .carInfo-list {
  border-bottom: 1px solid #ccc;
}

.carInfo-wrapper .title {
  padding: 30rpx;
}

.carInfo-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 50rpx;
}

.carInfo-list .select, .carInfo-list .delete {
  width: 50rpx;
  height: 50rpx;
}

.carInfo-list .selected {
  width: 100rpx;
  margin-left: -28rpx;
  margin-right: -18rpx;
}

.carInfo-list .name, .remark .memo {
  width: 65%;
  padding: 10rpx 15rpx;
  font-size: 30rpx;
}

.add-wrapper {
  padding: 30rpx 0;
}

.add-wrapper .add {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
}

.remark {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 50rpx;
}

.remark .title {
  font-size: 30rpx;
  margin-right: 20rpx;
}

.remark .memo {
  height: 80rpx;
  padding: 10rpx 15rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.submit {
  width: 160rpx;
  background: orange;
  color: white;
}

.select-mask {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.select-wrapper {
  width: 75%;
}

.select-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  background: #3c816d;
}

.select-header .title {
  line-height: 40rpx;
  font-size: 26rpx;
  color: white;
}

.select-header .close {
  width: 40rpx;
  height: 40rpx;
}

.car-wrapper {
  padding: 60rpx;
  background: white;
}

.car-wrapper .list {
  width: 120rpx;
  height: 60rpx;
  margin: 10rpx;
}
